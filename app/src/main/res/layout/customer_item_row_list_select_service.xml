    android:layout_width="@dimen/_130sdp"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_15sdp"
    android:paddingTop="@dimen/_10sdp"
    android:paddingBottom="@dimen/_10sdp"
    android:id="@+id/cl_main"
    xmlns:app="http://schemas.android.com/apk/res-auto">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_service_pic"
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:src="@drawable/logo_two"/>

            <TextView
                android:id="@+id/txt_service_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/iv_service_pic"
                app:layout_constraintLeft_toLeftOf="@+id/iv_service_pic"
                app:layout_constraintRight_toRightOf="@+id/iv_service_pic"
                android:layout_marginTop="@dimen/_5sdp"
                android:textSize="@dimen/_8sdp"
                android:textColor="@color/colorBlack"
                android:text="service name" />

