<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">



    <LinearLayout
        android:id="@+id/ln_layout_food_name_and_extras"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_13sdp"
        android:layout_marginLeft="@dimen/_14sdp"
        android:layout_marginBottom="@dimen/_14sdp"
        android:layout_marginRight="@dimen/_100sdp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_food_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="14.4sp"
                android:fontFamily="sans-serif"
                android:textStyle="normal"
                android:textColor="@color/color_restaurant_name"
                android:text="@string/blank_space"
                android:gravity="center"/>

            <TextView
                android:id="@+id/txt_food_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_8sdp"
                android:singleLine="true"
                android:text="@string/blank_space"
                android:textSize="12sp"
                android:textColor="@color/sub_black_color"
                android:gravity="center"/>
        </LinearLayout>

        <TextView
            android:id="@+id/txt_food_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11.5sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:textColor="@color/sub_black_color"
            android:text="@string/blank_space"
            android:maxLines="2"
            android:ellipsize="end" />

        <Button
            android:id="@+id/btn_show_more_or_less"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_30sdp"
            android:text="show more"
            android:textSize="11.5sp"
            android:background="@android:color/transparent"
            android:textAllCaps="false"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/txt_extras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="11.5sp"
            android:fontFamily="sans-serif"
            android:textStyle="normal"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_15sdp"
            android:textColor="@color/sub_black_color"
            android:text="@string/blank_space"
            android:maxLines="2"
            android:ellipsize="end"
            />

        <Button
            android:id="@+id/btn_show_more_or_less_extra_packages"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_30sdp"
            android:text="show more"
            android:textSize="11.5sp"
            android:background="@android:color/transparent"
            android:textAllCaps="false"
            android:visibility="gone"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_13sdp"
        android:layout_marginRight="@dimen/_14sdp"
        android:layout_marginBottom="@dimen/_14sdp"
        android:layout_alignParentRight="true"
        android:weightSum="2">


        <ImageView
            android:id="@+id/img_edit_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_icon_on"
            android:layout_weight="1"
            android:padding="@dimen/_8sdp"/>

        <ImageView
            android:id="@+id/img_remove_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/cancel_icon"
            android:layout_weight="1"
            android:padding="@dimen/_8sdp"
            android:layout_marginLeft="@dimen/_10sdp"/>

    </LinearLayout>

    <View
        android:id="@+id/view_seperator_4"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:layout_below="@+id/ln_layout_food_name_and_extras"
        android:background="@color/color_order_status_vertical_line"
        android:layout_marginLeft="@dimen/_8sdp"
        android:layout_marginRight="@dimen/_8sdp"/>


</RelativeLayout>