<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/tv_price_details"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="@dimen/_10sdp"
        android:textColor="@color/light_grey"
        android:text="Price Details"/>

    <TextView
        android:id="@+id/happy_hour_discount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_price_details"
        app:layout_constraintLeft_toLeftOf="parent"
        android:padding="@dimen/_10sdp"
        android:textColor="@color/colorBlack"
        android:text="Happy hours Discount"
        />

    <TextView
        android:id="@+id/tv_happy_hour_discount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tv_price_details"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="@dimen/_10sdp"
        android:textColor="@color/colorBlack"
        android:text="$ 00.00"
        />


    <TextView
        android:id="@+id/promo_code_discount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/happy_hour_discount"
        app:layout_constraintLeft_toLeftOf="parent"
        android:padding="@dimen/_10sdp"
        android:textColor="@color/colorBlack"
        android:text="Promo code Discount"
        />

    <TextView
        android:id="@+id/tv_promo_code_discount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/happy_hour_discount"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="@dimen/_10sdp"
        android:textColor="@color/colorBlack"
        android:text="$ 00.00"
        />


    <TextView
        android:id="@+id/service_fee"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/promo_code_discount"
        app:layout_constraintLeft_toLeftOf="parent"
        android:padding="@dimen/_10sdp"
        android:textColor="@color/colorBlack"
        android:text="Service Fee"
        />

    <TextView
        android:id="@+id/tv_service_fee"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/promo_code_discount"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="@dimen/_10sdp"
        android:textColor="@color/colorBlack"
        android:text="$ 20.00"
        />

    <TextView
        android:id="@+id/tip_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/service_fee"
        app:layout_constraintLeft_toLeftOf="parent"
        android:padding="@dimen/_10sdp"
        android:textColor="@color/colorBlack"
        android:text="Tip Amount"
        />

    <TextView
        android:id="@+id/tv_tip_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/service_fee"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="@dimen/_10sdp"
        android:textColor="@color/colorBlack"
        android:text="$ 5.00"
        />

    <View
        android:id="@+id/view_divider_total_product"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/tip_amount"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@color/light_grey"
        />

    <TextView
        android:id="@+id/overall_total_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/view_divider_total_product"
        app:layout_constraintLeft_toLeftOf="parent"
        android:padding="@dimen/_10sdp"
        android:textColor="@color/colorPrimary"
        android:text="Overall Total Amount"
        />

    <TextView
        android:id="@+id/tv_overall_total_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/view_divider_total_product"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="@dimen/_10sdp"
        android:textColor="@color/colorPrimary"
        android:text="$ 25.00"
        />


</androidx.constraintlayout.widget.ConstraintLayout>